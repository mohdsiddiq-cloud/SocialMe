<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fragments.CreateAccountFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create \n Account"
        android:layout_marginTop="78dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/main"
        />
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/nameca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:hint="Name"
            android:layout_marginLeft="8dp"
            android:background="@drawable/text_box"/>

        <EditText
            android:id="@+id/emailca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:hint="Email"
            android:layout_marginLeft="8dp"
            android:background="@drawable/text_box"/>

        <EditText
            android:id="@+id/passwordca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:hint="Password"
            android:layout_marginLeft="8dp"
            android:background="@drawable/text_box"/>
        <EditText
            android:id="@+id/password2ca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:hint="Confirm Password"
            android:layout_marginLeft="8dp"
            android:background="@drawable/text_box"/>

    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll1"
        android:layout_above="@+id/signupca"
        android:visibility="gone"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="@drawable/button"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/white"
        android:layout_above="@+id/loginca"
        android:layout_marginBottom="40dp"
        android:id="@+id/signupca"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/loginca"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:text="back to login"
        android:textStyle="bold"
        android:textColor="@color/main"
        />

</RelativeLayout>