<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fragments.LoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot \n Password"
        android:layout_marginTop="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/main"
        />


        <EditText
            android:id="@+id/emailfpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:hint="Email"
            android:layout_marginLeft="8dp"
            android:background="@drawable/text_box"/>



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarfpf"
        android:layout_below="@+id/emailfpf"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recover"
        android:background="@drawable/button"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/white"
        android:layout_above="@+id/backto"
        android:layout_marginBottom="16dp"
        android:id="@+id/recoverbtn"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/backto"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="78dp"
        android:text="Back to, Login"
        android:textStyle="bold"
        android:textColor="@color/main"
        />


</RelativeLayout>